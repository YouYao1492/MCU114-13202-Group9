<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_setting_appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.App.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.App.PopupOverlay">

            <ImageButton
                android:id="@+id/activity_setting_imagebutton_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="back"
                android:padding="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/activity_setting_textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="設定"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_setting_appbarlayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/activity_setting_textview_profile_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="頭像管理"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/activity_setting_imageview_profile_preview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_setting_textview_profile_label"
                app:srcCompat="@drawable/ic_profile" />

            <Button
                android:id="@+id/activity_setting_button_change_profile_pic"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="更換頭像"
                app:layout_constraintBottom_toBottomOf="@+id/activity_setting_imageview_profile_preview"
                app:layout_constraintStart_toEndOf="@+id/activity_setting_imageview_profile_preview"
                app:layout_constraintTop_toTopOf="@+id/activity_setting_imageview_profile_preview" />

            <TextView
                android:id="@+id/activity_setting_textview_personal_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="個人信息"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_setting_imageview_profile_preview" />

            <TextView
                android:id="@+id/activity_setting_textview_network_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="網絡狀況"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_setting_textview_personal_info_label" />

            <TextView
                android:id="@+id/activity_setting_textview_network_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_textview_network_label"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Good" />

            <TextView
                android:id="@+id/activity_setting_textview_theme_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主題"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_setting_textview_network_label" />

            <Spinner
                android:id="@+id/activity_setting_spinner_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_textview_theme_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/activity_setting_textview_music_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背景音樂"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_setting_textview_theme_label" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/activity_setting_switch_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_textview_music_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/activity_setting_button_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="賬號管理 (Logout)"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_setting_switch_music" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>